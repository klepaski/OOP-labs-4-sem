<Window x:Class="OOPLab14.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPLab14"
        mc:Ignorable="d"
        Title="Dialog" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock>Введите количество:</TextBlock>
        <TextBox Grid.Row="1" Name="Count"></TextBox>
        <TextBlock Margin="0,0,0,27" Grid.Row="2">Выберите тип:</TextBlock>
        <ComboBox Grid.Row="2" Name="Type" Margin="0 20 0 0">
            <TextBlock>Square</TextBlock>
            <TextBlock>Circle</TextBlock>
        </ComboBox>
        <Button IsCancel="True" Content="Cancel" Margin="46,204,207,-182" Grid.Row="2"/>
        <Button IsDefault="True" Click="Accept_Click" Margin="10,204,262,-181" Content="Ok" Grid.Row="2"/>
    </Grid>
</Window>
